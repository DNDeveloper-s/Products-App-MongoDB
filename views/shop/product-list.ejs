<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/shop.css">
</head>
<body>
    <%- include('../includes/navigation.ejs'), {isAuthenticated: isAuthenticated} %>

    <main>
        <h3 class="anim" data-animToChilds="false" data-animDirection="topToBottom" data-animDelay="0.6">Products</h3>
        <% if(prods.length > 0) { %>
            <div class="products__holder anim" data-animDirection="topToBottom">
                <% for (let product of prods) {%>
                    <div class="product" data-csrfToken="<%= csrfToken %>">


<!--                        <div class="back-drop"></div>-->
<!--                        <div class="loading-spinner">-->
<!--                            <div class="spinner spinner-2">-->
<!--                                <div class="ccl-1"></div>-->
<!--                                <div class="ccl-2"></div>-->
<!--                            </div>-->
<!--                        </div>-->
<!--                        <div class="added-to-cart animItManually">-->
<!--                            <h4>Product Added!</h4>-->
<!--                            <button class="undo-btn" type="button">Undo</button>-->
<!--                            <div class="loader"></div>-->
<!--                        </div>-->


                        <div class="product-img">
                            <div class="grad"></div>
                            <img src="<%= product.imageUrl %>" alt="our book">
                        </div>
                        <div class="product-header">
                            <h4 class="product__title"><%= product.title %></h4>
                        </div>
                        <div class="product-content">
                            <p class="price">$<%= product.price %></p>
                            <p class="description"><%= product.description %></p>
                        </div>
                        <div class="product-btn">
                            <a style="margin-right: 40px" href="/products/<%= product._id %>" class="add-to-cart">Details</a>
                            <%- include('../includes/add-to-cart.ejs', {product: product}) %>
                        </div>
                        <p class="product__userId">Seller :- <a href="/profile?userId=<%= product.userId._id %>"><%= product.userId.name %></a></p>
                    </div>
                <% } %>
            </div>
            <%- include('../includes/pagination.ejs'), {path: '/product'}  %>
        <% } else { %>
            <h1>No Products Found Folk!</h1>
        <% } %>
    </main>

<%- include('../includes/end.ejs') %>