<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/shop.css">
</head>
<body>
    <%- include('../includes/navigation.ejs'), {isAuthenticated: isAuthenticated} %>

    <main class="centered">
        <h3 class="anim" data-animToChilds="false" data-animDirection="topToBottom" data-animDelay="0.6">Welcome!</h3>
        <% if(errorMessage) { %>
            <div class="error_popup"><%= errorMessage %></div>
        <% } %>
        <% if(prods.length > 0) { %>
            <div class="products__holder anim" data-animDirection="topToBottom">
                <% for (let product of prods) {%>
                    <div class="product" data-csrfToken="<%= csrfToken %>">
                        <div class="product-img">
                            <div class="grad"></div>
                            <img src="<%= product.imageUrl %>" alt="our book">
                        </div>
                        <div class="product-header">
                            <h4 class="product__title"><%= product.title %></h4>
                        </div>
                        <div class="product-content">
                            <p class="price">$<%= product.price %></p>
                            <p class="description"><%= product.description %></p>
                        </div>
                        <div class="product-btn">
                            <%- include('../includes/add-to-cart.ejs', {product: product}) %>
                        </div>
                    </div>
                <% } %>
            </div>
            <%- include('../includes/pagination.ejs'), {path: '/'} %>
        <% } else { %>
            <h1>No Products Found Folk!</h1>
        <% } %>
    </main>


<%- include('../includes/end.ejs') %>