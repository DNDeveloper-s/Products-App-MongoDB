<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/shop.css">
</head>
<body>
    <%- include('../includes/navigation.ejs'), {isAuthenticated: isAuthenticated} %>

    <main class="centered anim" data-animDirection="topToBottom" data-id="detailsPage">
        <h2 style="margin: 40px 0;"><%= product.title %></h2>
        <hr>
        <div style="position: relative; margin-top: 40px;">
            <img src="<%= product.imageUrl %>" style="width: 50%; height: 100%;" alt="<%= product.title %>">
        </div>
        <h4>$<%= product.price %></h4>
        <p><%= product.description %></p>
        <%- include('../includes/add-to-cart.ejs') %>

    </main>

<%- include('../includes/end.ejs') %>